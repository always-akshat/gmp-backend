#!/bin/sh
PIDFILE=/var/run/gmp-v3-migration.pid
set -e

case "$1" in
    configure)

	if [ ! -d "/var/log/gmp-v3" ]; then
		sudo mkdir /var/log/gmp-v3
		sudo touch /var/log/gmp-v3/requests.log
		sudo touch /var/log/gmp-v3/service-info.log
		sudo touch /var/log/gmp-v3/service-error.log
		sudo chmod 777 /var/log/gmp-v3/*
    fi

	if [ -d "/etc/monit/" ]; then
		monit stop gmp-v3
		/etc/init.d/gmp-v3-migration start
		PID=`cat $PIDFILE`
		while [ -d "/proc/$PID" ]; do
            sleep 3
            echo "Waiting...."
        done
		monit start gmp-v3
	else
		/etc/init.d/gmp-v3 stop
		/etc/init.d/gmp-v3-migration start
		PID=`cat $PIDFILE`
		while [ -d "/proc/$PID" ]; do
            sleep 3
            echo "Waiting...."
        done
        /etc/init.d/gmp-v3 start
	fi
    ;;
    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac
exit 0
